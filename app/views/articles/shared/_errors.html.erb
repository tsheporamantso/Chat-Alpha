<% if obj.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show " role="alert">
    <h4 class="alert-heading">The following errors prevented <%= obj.class.name.downcase %> from being saved!</h4>
      <ul>
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>
